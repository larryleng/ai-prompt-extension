{
  "manifest_version": 3,
  "name": "大西瓜提示词",
  "version": "3.6",
  "description": "一个AI提示词管理的浏览器插件",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "pages/index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "optional_host_permissions": [
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://* http://* http://localhost:* http://127.0.0.1:*"
  }
}